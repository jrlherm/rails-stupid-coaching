<div class="container">
  <h1 class="text-center mt-5 mb-4">Stupid Coaching</h1>

  <!-- Question block -->
  <div class="card">
    <div class="card-header">
      Question
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>
          <%= @question %>
        </p>
        <footer class="blockquote-footer">You</cite></footer>
      </blockquote>
    </div>
  </div>

  <!-- Answer bloc -->
  <div class="card mt-5">
    <div class="card-header">
      Answer
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>
          <%= if @question.strip == 'I am going to work'
                'Great!'
              elsif @question.strip[-1] == '?'
                'Silly question, get dressed and go to work!'
              else
                'I don\'t care, get dressed and go to work!'
              end %>
        </p>
        <footer class="blockquote-footer">The coach</cite></footer>
      </blockquote>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to 'Ask a new question', ask_path %>
  </div>
</div>
